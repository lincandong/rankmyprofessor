{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"*": [
				"types/*"
			]
		},
		"moduleResolution": "node",
		"module": "commonjs",
		"noImplicitAny": true,
		"strict": true,
		"sourceMap": true,
		"target": "es6",
		"lib": [
			"es2015",
			"es6",
			"dom",
			"es2015.symbol",
			"es2017.sharedmemory"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "build"
	},
	"include": [
		"index.ts",
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}